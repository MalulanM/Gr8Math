<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Theme.Gr8Math" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:fontFamily">@font/lexend</item>
        <item name="fontFamily">@font/lexend</item>

        <item name="colorPrimary">@color/colorRed</item>
        <item name="colorPrimaryVariant">@color/colorAccent</item>
        <item name="colorSecondary">@color/colorMatisse</item>
        <item name="android:textColor">@color/colorText</item>

        <item name="textInputStyle">@style/Gr8TextInputStyle</item>
        <item name="materialButtonStyle">@style/Gr8ButtonStyle</item>
        <item name="materialCardViewStyle">@style/Gr8Card</item>
    </style>

    <style name="Gr8Card" parent="Widget.MaterialComponents.CardView">
        <item name="cardBackgroundColor">@color/white</item>
        <item name="cardCornerRadius">16dp</item>
        <item name="cardUseCompatPadding">true</item>
        <item name="cardElevation">6dp</item>
    </style>

    <style name="Gr8TextInputStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxBackgroundColor">@color/colorAccent</item>
        <item name="boxBackgroundMode">outline</item>
        <item name="boxStrokeColor">@color/til_stroke</item>
        <item name="boxStrokeWidth">1dp</item>
        <item name="boxStrokeWidthFocused">2dp</item>
        <item name="boxCornerRadiusTopStart">8dp</item>
        <item name="boxCornerRadiusTopEnd">8dp</item>
        <item name="boxCornerRadiusBottomStart">8dp</item>
        <item name="boxCornerRadiusBottomEnd">8dp</item>
        <item name="hintTextColor">@color/til_hint</item>
    </style>

    <style name="Gr8ButtonStyle" parent="Widget.MaterialComponents.Button">
        <item name="cornerRadius">12dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/white</item>
        <item name="backgroundTint">@color/colorMatisse</item>
        <item name="rippleColor">@color/colorMatisse</item>
        <item name="android:letterSpacing">0.01</item>
    </style>

    <style name="Gr8Title">
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/colorText</item>
        <item name="android:fontFamily">@font/lexend</item>
        <item name="android:letterSpacing">0.02</item>
    </style>

    <style name="Gr8H1">
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/colorText</item>
        <item name="android:fontFamily">@font/lexend</item>
        <item name="android:letterSpacing">0.01</item>
    </style>

    <style name="Shape.Radius10" parent="">
        <item name="cornerSize">10dp</item>
    </style>

    <!-- Bold, Lexend toolbar title -->
    <style name="TextAppearance.Gr8.ToolbarTitle" parent="TextAppearance.Material3.TitleLarge">
        <item name="android:fontFamily">@font/lexend</item>
        <item name="fontFamily">@font/lexend</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/colorText</item>
    </style>


</resources>
