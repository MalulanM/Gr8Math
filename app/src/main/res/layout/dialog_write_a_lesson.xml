<?xml version="1.0" encoding="utf-8"?>
<!-- This root is a CardView to get the rounded corners -->
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="16dp"
    android:layout_marginEnd="16dp"
    app:cardBackgroundColor="@color/colorLight"
    app:cardCornerRadius="28dp"
    app:cardElevation="8dp">

    <!-- This LinearLayout holds the actual content -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Top bar: back + centered title -->
        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@android:color/transparent"
            app:navigationIcon="@drawable/ic_arrow_back_24"
            app:title="@string/write_lesson_title"
            app:titleCentered="true"
            app:titleTextAppearance="@style/TextAppearance.Gr8.ToolbarTitle"
            app:titleTextColor="@color/colorText" />

        <!-- Form Content -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingStart="24dp"
            android:paddingEnd="24dp"
            android:paddingBottom="24dp">

            <TextView
                android:id="@+id/message"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="12dp"
                android:text="@string/add_class_subtitle"
                android:textAlignment="center"
                android:textColor="@color/colorText"
                android:textSize="15sp"
                android:textStyle="bold" />

            <!-- Week Number Input -->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/tilWeekNumber"
                style="@style/Gr8TextInputStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/week_number_hint"
                app:boxBackgroundColor="@color/white"
                app:boxStrokeColor="@color/saffron">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etWeekNumber"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/lexend"
                    android:inputType="number"
                    android:maxLines="1"
                    android:textColor="@color/colorText" />
            </com.google.android.material.textfield.TextInputLayout>

            <!-- Lesson Title Input -->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/tilLessonTitle"
                style="@style/Gr8TextInputStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:hint="@string/lesson_title_hint"
                app:boxBackgroundColor="@color/white">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etLessonTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android_fontFamily="@font/lexend"
                    android:inputType="textCapSentences"
                    android:maxLines="1"
                    android:textColor="@color/colorText" />
            </com.google.android.material.textfield.TextInputLayout>

            <!-- Next Button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnNext"
                style="@style/Gr8ButtonStyle"
                android:layout_width="match_parent"
                android:layout_height="52dp"
                android:layout_marginTop="24dp"
                android:text="@string/next_button"
                app:backgroundTint="@color/btn_primary_state" />

        </LinearLayout>
    </LinearLayout>
</com.google.android.material.card.MaterialCardView>