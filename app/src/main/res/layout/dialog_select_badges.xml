<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="320dp"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="@color/colorLight"
    app:cardCornerRadius="16dp"
    app:cardElevation="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp">

        <!-- Header with Close Button -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_toStartOf="@id/btnClose">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/select_badges_title"
                    android:fontFamily="@font/lexend"
                    android:textStyle="bold"
                    android:textColor="@color/colorText"
                    android:textSize="18sp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/select_badges_subtitle"
                    android:fontFamily="@font/lexend"
                    android:textColor="@color/colorSubtleText"
                    android:textSize="12sp"/>
            </LinearLayout>

            <ImageView
                android:id="@+id/btnClose"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_close"
                app:tint="@color/colorDarkCyan"
                android:layout_alignParentEnd="true"
                android:layout_alignParentTop="true"
                android:clickable="true"
                android:focusable="true"/>
        </RelativeLayout>

        <!-- List of Badges -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvBadgeSelection"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="16dp"
            android:maxHeight="300dp" />
        <!-- maxHeight doesn't exist in standard views, but ConstraintLayout can limit it.
             For simple LinearLayout, it will just expand. -->

        <!-- Save Button (Text Style) -->
        <TextView
            android:id="@+id/btnSaveSelection"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:text="@string/save"
            android:fontFamily="@font/lexend"
            android:textStyle="bold"
            android:textColor="@color/colorMatisse"
            android:textSize="16sp"
            android:padding="8dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:clickable="true"
            android:focusable="true"/>

    </LinearLayout>
</com.google.android.material.card.MaterialCardView>