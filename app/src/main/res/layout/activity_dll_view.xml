<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorLight">

    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        app:navigationIcon="@drawable/ic_arrow_back_24"
        app:title="Daily Lesson Log"
        app:titleCentered="true"
        app:titleTextAppearance="@style/TextAppearance.Gr8.ToolbarTitle"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/btnDatePrev"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginStart="16dp"
        android:src="@drawable/ic_arrow_back_24"
        android:background="?attr/selectableItemBackgroundBorderless"
        app:tint="@color/colorDarkCyan"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/cardDateHeader"
        app:layout_constraintBottom_toBottomOf="@id/cardDateHeader"/>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cardDateHeader"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        app:cardBackgroundColor="@color/colorAccent"
        app:cardCornerRadius="8dp"
        app:cardElevation="0dp"
        app:strokeWidth="1dp"
        app:strokeColor="@color/colorDarkCyan"
        app:layout_constraintTop_toBottomOf="@id/toolbar"
        app:layout_constraintStart_toEndOf="@id/btnDatePrev"
        app:layout_constraintEnd_toStartOf="@id/btnDateNext">

        <TextView
            android:id="@+id/tvDateHeader"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="January 1, 2026"
            android:fontFamily="@font/lexend"
            android:textStyle="bold"
            android:textColor="@color/colorText"
            android:gravity="center"
            android:padding="12dp"
            android:textSize="16sp"/>
    </com.google.android.material.card.MaterialCardView>

    <ImageButton
        android:id="@+id/btnDateNext"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginEnd="16dp"
        android:src="@drawable/ic_arrow_forward_24"
        android:background="?attr/selectableItemBackgroundBorderless"
        app:tint="@color/colorDarkCyan"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/cardDateHeader"
        app:layout_constraintBottom_toBottomOf="@id/cardDateHeader"/>

    <ImageButton
        android:id="@+id/btnSectionPrev"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:src="@drawable/ic_arrow_back_24"
        android:background="?attr/selectableItemBackgroundBorderless"
        app:tint="@color/colorDarkCyan"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/viewPager"
        app:layout_constraintBottom_toBottomOf="@id/viewPager"/>

    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/viewPager"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toEndOf="@id/btnSectionPrev"
        app:layout_constraintEnd_toStartOf="@id/btnSectionNext"
        app:layout_constraintTop_toBottomOf="@id/cardDateHeader"
        app:layout_constraintBottom_toTopOf="@id/bottom_navigation"
        android:layout_margin="0dp"/>

    <ImageButton
        android:id="@+id/btnSectionNext"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:src="@drawable/ic_arrow_forward_24"
        android:background="?attr/selectableItemBackgroundBorderless"
        app:tint="@color/colorDarkCyan"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/viewPager"
        app:layout_constraintBottom_toBottomOf="@id/viewPager"/>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:menu="@menu/bottom_nav_menu_teacher"
        app:labelVisibilityMode="labeled"
        app:itemIconTint="@color/bottom_nav_color_selector"
        app:itemTextColor="@color/bottom_nav_color_selector"/>

</androidx.constraintlayout.widget.ConstraintLayout>