<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorLight">

    <!-- Top bar: back + centered bold title -->
    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbar"
        android:layout_width="0dp"
        android:layout_height="?attr/actionBarSize"
        android:background="@android:color/transparent"
        app:navigationIcon="@drawable/ic_arrow_back_24"
        app:title="@string/fp_title"
        app:titleCentered="true"
        app:titleTextColor="@color/colorText"
        app:titleTextAppearance="@style/TextAppearance.Gr8.ToolbarTitle"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="false"
        app:layout_constraintTop_toBottomOf="@id/toolbar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingStart="@dimen/screen_side_login"
            android:paddingEnd="@dimen/screen_side_login"
            android:paddingTop="12dp"
            android:paddingBottom="12dp">

            <!-- Info text -->

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/fp_info"
                android:textColor="@color/colorText"
                android:textSize="12sp"
                android:justificationMode="inter_word"
                tools:ignore="UnusedAttribute"
                android:paddingBottom="8dp" />

            <!-- ONE outlined box: Code | Get Code -->
            <LinearLayout
                android:id="@+id/boxEmailCode"
                android:layout_width="match_parent"
                android:layout_height="52dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/bg_code_box"
                android:gravity="center_vertical"
                android:paddingStart="12dp"
                android:paddingEnd="12dp"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:addStatesFromChildren="true"
                android:clickable="true">

                <!-- Code input (no background so it blends) -->
                <EditText
                    android:id="@+id/etEmailCode"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:hint="@string/fp_Emailcode"
                    android:background="@android:color/transparent"
                    android:paddingStart="2dp"
                    android:paddingEnd="8dp"
                    android:textColor="@color/colorText"
                    android:textColorHint="@color/colorSubtleText"
                    android:fontFamily="@font/lexend"
                    android:singleLine="true" />

                <!-- Vertical divider -->
                <View
                    android:layout_width="1dp"
                    android:layout_height="24dp"
                    android:background="@color/colorMatisse"
                    android:alpha="0.6" />

                <!-- Get Code tappable text -->
                <TextView
                    android:id="@+id/tvGetCode"
                    android:layout_width="wrap_content"
                    android:layout_height="35dp"
                    android:height="80dp"
                    android:clickable="true"
                    android:fontFamily="@font/lexend"
                    android:foreground="?attr/selectableItemBackgroundBorderless"
                    android:gravity="center"
                    android:paddingStart="12dp"
                    android:paddingEnd="4dp"
                    android:text="@string/fp_get_code"
                    android:textColor="@color/colorText"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/boxCode"
                android:layout_width="match_parent"
                android:layout_height="52dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/bg_code_box"
                android:gravity="center_vertical"
                android:paddingStart="12dp"
                android:paddingEnd="12dp"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:addStatesFromChildren="true"
                android:clickable="true">

                <!-- Code input (no background so it blends) -->
                <EditText
                    android:id="@+id/etCode"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:hint="@string/fp_code"
                    android:background="@android:color/transparent"
                    android:paddingStart="2dp"
                    android:paddingEnd="8dp"
                    android:textColor="@color/colorText"
                    android:textColorHint="@color/colorSubtleText"
                    android:fontFamily="@font/lexend"
                    android:singleLine="true" />

                <!-- Vertical divider -->

                <!-- Get Code tappable text -->
            </LinearLayout>

            <!-- Verify (locked/dark-cyan if you set a state tint) -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnVerify"
                style="@style/Gr8ButtonStyle"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginTop="12dp"
                android:text="@string/fp_verify"
                android:enabled="false"
                app:backgroundTint="@color/btn_primary_state" />

            <!-- Divider line -->
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="16dp"
                android:background="#E6E6E6" />

            <!-- New Password -->
            <com.google.android.material.textfield.TextInputLayout
                style="@style/Gr8TextInputStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:hint="@string/fp_new_password"
                app:passwordToggleEnabled="true"
                app:boxBackgroundMode="outline"
                app:boxBackgroundColor="@color/colorLight"
                app:boxStrokeColor="@color/til_stroke"
                app:boxStrokeWidth="1dp"
                app:boxStrokeWidthFocused="2dp">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etNewPass"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:inputType="textPassword"
                    android:fontFamily="@font/lexend"
                    android:paddingStart="14dp"
                    android:paddingEnd="14dp"
                    android:textColor="@color/colorText" />
            </com.google.android.material.textfield.TextInputLayout>

            <!-- Re-enter Password -->
            <com.google.android.material.textfield.TextInputLayout
                style="@style/Gr8TextInputStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/field_spacing"
                android:hint="@string/fp_reenter_password"
                app:passwordToggleEnabled="true"
                app:boxBackgroundMode="outline"
                app:boxBackgroundColor="@color/colorLight"
                app:boxStrokeColor="@color/til_stroke"
                app:boxStrokeWidth="1dp"
                app:boxStrokeWidthFocused="2dp">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etRePass"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:inputType="textPassword"
                    android:fontFamily="@font/lexend"
                    android:paddingStart="14dp"
                    android:paddingEnd="14dp"
                    android:textColor="@color/colorText" />
            </com.google.android.material.textfield.TextInputLayout>

            <!-- Save Password (locked/dark-cyan initially) -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnSave"
                style="@style/Gr8ButtonStyle"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginTop="16dp"
                android:text="@string/fp_save"
                android:enabled="false"
                app:backgroundTint="@color/btn_primary_state" />
        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>
