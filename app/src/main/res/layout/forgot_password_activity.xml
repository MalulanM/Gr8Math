<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorLight">

    <!-- Top bar: back + centered title -->
    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbar"
        android:layout_width="0dp"
        android:layout_height="?attr/actionBarSize"
        android:background="@android:color/transparent"
        app:navigationIcon="@drawable/ic_arrow_back_24"
        app:title="@string/fp_title"
        app:titleCentered="true"
        app:titleTextColor="@color/colorText"
        app:titleTextAppearance="@style/TextAppearance.Gr8.ToolbarTitle"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="false"
        app:layout_constraintTop_toBottomOf="@id/toolbar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingStart="@dimen/screen_side_login"
            android:paddingEnd="@dimen/screen_side_login"
            android:paddingTop="12dp"
            android:paddingBottom="12dp">

            <!-- Info text -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:justificationMode="inter_word"
                android:paddingBottom="8dp"
                android:text="@string/fp_info"
                android:textColor="@color/colorText"
                android:textSize="14sp"
                android:textStyle="bold"
                tools:ignore="UnusedAttribute" />

            <!-- Email input and Get Code -->
            <LinearLayout
                android:id="@+id/boxEmailCode"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginTop="8dp"
                android:addStatesFromChildren="true"
                android:background="@drawable/bg_code_box"
                android:clickable="true"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:gravity="center_vertical"
                android:paddingStart="12dp"
                android:paddingEnd="12dp">

                <EditText
                    android:id="@+id/etEmailCode"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@android:color/transparent"
                    android:fontFamily="@font/lexend"
                    android:hint="@string/fp_Emailcode"
                    android:paddingStart="2dp"
                    android:paddingEnd="8dp"
                    android:singleLine="true"
                    android:textColor="@color/colorText"
                    android:textColorHint="@color/colorSubtleText"
                    app:boxStrokeWidth="1dp"
                    app:boxStrokeWidthFocused="2dp" />

                <TextView
                    android:id="@+id/tvGetCode"
                    android:layout_width="wrap_content"
                    android:layout_height="35dp"
                    android:clickable="true"
                    android:fontFamily="@font/lexend"
                    android:foreground="?attr/selectableItemBackgroundBorderless"
                    android:gravity="center"
                    android:paddingStart="12dp"
                    android:paddingEnd="4dp"
                    android:text="@string/fp_get_code"
                    android:textColor="@color/colorText"
                    android:textStyle="bold" />
            </LinearLayout>

            <!-- Code input -->
            <LinearLayout
                android:id="@+id/boxCode"
                android:layout_width="match_parent"
                android:layout_height="52dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/bg_code_box"
                android:gravity="center_vertical"
                android:paddingStart="12dp"
                android:paddingEnd="12dp"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:addStatesFromChildren="true"
                android:clickable="true">

                <!-- Code input with an icon inside -->
                <EditText
                    android:id="@+id/etCode"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@android:color/transparent"
                    android:drawableEnd="@drawable/ic_disable"
                    android:fontFamily="@font/lexend"
                    android:hint="Code"
                    android:paddingStart="2dp"
                    android:paddingEnd="8dp"
                    android:singleLine="true"
                    android:textColor="@color/colorText"
                    android:textColorHint="@color/colorSubtleText" /> <!-- Icon on the right end -->
            </LinearLayout>


            <!-- Verify button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnVerify"
                style="@style/Gr8ButtonStyle"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginTop="12dp"
                android:enabled="false"
                android:text="@string/fp_verify"
                app:backgroundTint="@color/btn_primary_state" />

        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>
