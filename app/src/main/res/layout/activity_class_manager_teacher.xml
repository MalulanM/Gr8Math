<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorLight">

    <!-- This is the Main (Default) View -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/default_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="visible">

        <!-- Top bar: Centered Icon + Title + Search Icon -->

        <!-- Scrollable area for class cards -->

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/toolbar_main"
            android:layout_width="0dp"
            android:layout_height="?attr/actionBarSize"
            android:background="@android:color/transparent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <!-- This LinearLayout holds the icon and title together -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_marginEnd="8dp"
                    android:contentDescription="@string/class_manager_title"
                    android:src="@drawable/ic_icon_acc_manage" /> <!-- Using the 32dp profile icon -->

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/class_manager_title"
                    android:textAppearance="@style/TextAppearance.Gr8.ToolbarTitle"
                    android:textColor="@color/colorText" />

            </LinearLayout>

            <!-- Search Icon (on the right) -->
            <ImageView
                android:id="@+id/iv_search"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_marginEnd="16dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:clickable="true"
                android:contentDescription="@string/search_hint"
                android:focusable="true"
                android:padding="8dp"
                android:src="@drawable/ic_search" />

        </com.google.android.material.appbar.MaterialToolbar>

        <ScrollView
            android:id="@+id/scrollView"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:fillViewport="true"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            app:layout_constraintBottom_toTopOf="@+id/btnAddClasses"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/toolbar_main">

            <LinearLayout
                android:id="@+id/class_list_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingTop="8dp"
                android:paddingBottom="8dp">

                <!-- This is where your class cards will go -->
                <!-- We include one as a placeholder, just like your design -->
<!--                <include layout="@layout/item_teacher_class_card" />-->

            </LinearLayout>
        </ScrollView>

        <!-- "Add Classes" button pinned to the bottom right -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnAddClasses"
            style="@style/Gr8ButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="52dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="16dp"
            android:paddingStart="24dp"
            android:paddingEnd="24dp"
            android:text="@string/add_classes"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>


    <!-- =============================================================== -->
    <!-- This is the Search View (HIDDEN by default) -->
    <!-- =============================================================== -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/search_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorLight"
        android:visibility="gone"
        tools:visibility="gone"> <!-- Set to "gone" -->

        <!-- Search Input Field (NOW AT THE TOP) -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/tilSearch"
            style="@style/Gr8TextInputStyle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:hint="@string/search_hint"
            app:boxBackgroundColor="@color/colorLight"
            app:boxStrokeColor="@color/saffron"
            app:endIconDrawable="@drawable/ic_search"
            app:endIconMode="custom"
            app:endIconTint="@color/colorDarkCyan"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:startIconDrawable="@drawable/ic_arrow_back_24"
            app:startIconTint="@color/colorText">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etSearch"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/lexend"
                android:imeOptions="actionSearch"
                android:inputType="text"
                android:maxLines="1"
                android:textColor="@color/colorText" />


        </com.google.android.material.textfield.TextInputLayout>

        <!-- "No results" View -->
        <TextView
            android:id="@+id/tvNoResults"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="64dp"
            android:text="@string/no_search_results"
            android:textColor="@color/colorSubtleText"
            android:textSize="16sp"
            android:visibility="gone"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tilSearch"
            tools:visibility="gone" />

        <LinearLayout
            android:id="@+id/llPastSearches"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone"
            app:layout_constraintEnd_toEndOf="@id/tilSearch"
            app:layout_constraintStart_toStartOf="@id/tilSearch"
            app:layout_constraintTop_toBottomOf="@id/tilSearch"
            tools:visibility="visible">

            <!-- Divider -->
            <View
                android:id="@+id/space"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@drawable/past_search_divider" />

            <!-- Past Search 1 -->
            <TextView
                android:id="@+id/pastSearch"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="?attr/selectableItemBackground"
                android:clickable="true"
                android:focusable="true"
                android:fontFamily="@font/lexend"
                android:padding="16dp"
                android:text="Past Search 1"
                android:textColor="@color/colorSubtleText"
                android:textSize="14sp"
                tools:ignore="HardcodedText" />

            <!-- Divider -->

            <!-- Past Search 2 -->

            <!-- Divider -->

            <!-- Past Search 3 -->
        </LinearLayout>

        <!-- Search Results List (Hidden by default) -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvSearchResults"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginTop="8dp"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tilSearch"
            tools:itemCount="2"
            tools:listitem="@layout/item_teacher_class_card"
            tools:visibility="gone" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>