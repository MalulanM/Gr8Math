<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorLight">

    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        app:navigationIcon="@drawable/ic_arrow_back_24"
        app:title="Daily Lesson Log"
        app:titleCentered="true"
        app:titleTextAppearance="@style/TextAppearance.Gr8.ToolbarTitle"
        app:layout_constraintTop_toTopOf="parent" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintTop_toBottomOf="@id/toolbar"
        app:layout_constraintBottom_toBottomOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Content Standard"
                android:fontFamily="@font/lexend"
                android:textStyle="bold"
                android:textColor="@color/colorText"
                android:textSize="14sp"
                android:layout_marginBottom="8dp"/>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/tilContentStandard"
                style="@style/Gr8TextInputStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:boxBackgroundColor="@color/colorAccent"
                app:boxStrokeColor="@color/til_stroke"
                app:hintEnabled="false">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etContentStandard"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Lorem Ipsum"
                    android:gravity="top|start"
                    android:inputType="textMultiLine|textCapSentences"
                    android:minLines="5"
                    android:padding="16dp"
                    android:fontFamily="@font/lexend"
                    android:textColor="@color/colorText"/>
            </com.google.android.material.textfield.TextInputLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Performance Standard"
                android:fontFamily="@font/lexend"
                android:textStyle="bold"
                android:textColor="@color/colorText"
                android:textSize="14sp"
                android:layout_marginTop="24dp"
                android:layout_marginBottom="8dp"/>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/tilPerformanceStandard"
                style="@style/Gr8TextInputStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:boxBackgroundColor="@color/colorAccent"
                app:boxStrokeColor="@color/til_stroke"
                app:hintEnabled="false">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etPerformanceStandard"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Lorem Ipsum"
                    android:gravity="top|start"
                    android:inputType="textMultiLine|textCapSentences"
                    android:minLines="5"
                    android:padding="16dp"
                    android:fontFamily="@font/lexend"
                    android:textColor="@color/colorText"/>
            </com.google.android.material.textfield.TextInputLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Learning Competencies"
                android:fontFamily="@font/lexend"
                android:textStyle="bold"
                android:textColor="@color/colorText"
                android:textSize="14sp"
                android:layout_marginTop="24dp"
                android:layout_marginBottom="8dp"/>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/tilLearningCompetencies"
                style="@style/Gr8TextInputStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:boxBackgroundColor="@color/colorAccent"
                app:boxStrokeColor="@color/til_stroke"
                app:hintEnabled="false">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etLearningCompetencies"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Lorem Ipsum"
                    android:gravity="top|start"
                    android:inputType="textMultiLine|textCapSentences"
                    android:minLines="5"
                    android:padding="16dp"
                    android:fontFamily="@font/lexend"
                    android:textColor="@color/colorText"/>
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnNext"
                style="@style/Gr8ButtonStyle"
                android:layout_width="match_parent"
                android:layout_height="52dp"
                android:layout_marginTop="32dp"
                android:layout_marginBottom="32dp"
                android:text="@string/next_button"
                app:backgroundTint="@color/colorDarkCyan" />

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>