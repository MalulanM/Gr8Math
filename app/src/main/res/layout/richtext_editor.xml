<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#F0F2F5"
    android:orientation="vertical"
    android:padding="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <ImageButton
            android:id="@+id/action_text_color"
            style="@style/EditorToolbarButton"
            android:src="@drawable/change_color"
            android:contentDescription="Text Color" />

        <ImageButton
            android:id="@+id/action_highlight"
            style="@style/EditorToolbarButton"
            android:src="@drawable/highlight"
            android:contentDescription="Highlight" />

        <View
            android:layout_width="1dp"
            android:layout_height="24dp"
            android:layout_marginHorizontal="4dp"
            android:background="#D1D5DB" />

        <ImageButton
            android:id="@+id/action_bold"
            style="@style/EditorToolbarButton"
            android:src="@drawable/bold"
            android:contentDescription="Bold" />

        <ImageButton
            android:id="@+id/action_italic"
            style="@style/EditorToolbarButton"
            android:src="@drawable/italic"
            android:contentDescription="Italic" />

        <ImageButton
            android:id="@+id/action_underline"
            style="@style/EditorToolbarButton"
            android:src="@drawable/underline"
            android:contentDescription="Underline" />

        <ImageButton
            android:id="@+id/action_strikethrough"
            style="@style/EditorToolbarButton"
            android:src="@drawable/strikethrough"
            android:contentDescription="Strikethrough" />

        <View
            android:layout_width="1dp"
            android:layout_height="24dp"
            android:layout_marginHorizontal="4dp"
            android:background="#D1D5DB" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:padding="8dp">

            <TextView
                android:id="@+id/action_font_size_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="16"
                android:textColor="#4B5563"
                android:textSize="16sp"
                android:layout_marginEnd="6dp"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/action_font_size_up"
                    android:layout_width="20dp"
                    android:layout_height="14dp"
                    android:src="@drawable/ic_caret_up"
                    android:scaleType="fitCenter"
                    android:background="?attr/selectableItemBackground"
                    android:clickable="true"
                    android:focusable="true"
                    app:tint="#4B5563" />

                <ImageView
                    android:id="@+id/action_font_size_down"
                    android:layout_width="20dp"
                    android:layout_height="14dp"
                    android:src="@drawable/ic_caret_down"
                    android:scaleType="fitCenter"
                    android:background="?attr/selectableItemBackground"
                    android:clickable="true"
                    android:focusable="true"
                    app:tint="#4B5563" />

            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginVertical="4dp"
        android:background="#E5E7EB" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <ImageButton
            android:id="@+id/action_align_left"
            style="@style/EditorToolbarButton"
            android:src="@drawable/left"
            android:contentDescription="Align Left" />

        <ImageButton
            android:id="@+id/action_align_center"
            style="@style/EditorToolbarButton"
            android:src="@drawable/center"
            android:contentDescription="Align Center" />

        <ImageButton
            android:id="@+id/action_align_right"
            style="@style/EditorToolbarButton"
            android:src="@drawable/right"
            android:contentDescription="Align Right" />

        <View
            android:layout_width="1dp"
            android:layout_height="24dp"
            android:layout_marginHorizontal="4dp"
            android:background="#D1D5DB" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView style="@style/EditorHeadingButton" android:text="H1" android:id="@+id/action_h1"/>
            <TextView style="@style/EditorHeadingButton" android:text="H2" android:id="@+id/action_h2"/>
            <TextView style="@style/EditorHeadingButton" android:text="H3" android:id="@+id/action_h3"/>
            <TextView style="@style/EditorHeadingButton" android:text="H4" android:id="@+id/action_h4"/>
            <TextView style="@style/EditorHeadingButton" android:text="H5" android:id="@+id/action_h5"/>
        </LinearLayout>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginVertical="4dp"
        android:background="#E5E7EB" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <ImageButton
            android:id="@+id/action_numbered_list"
            style="@style/EditorToolbarButton"
            android:src="@drawable/bullet_number"
            android:contentDescription="Numbered List" />

        <ImageButton
            android:id="@+id/action_bulleted_list"
            style="@style/EditorToolbarButton"
            android:src="@drawable/bullet_point"
            android:contentDescription="Bulleted List" />

        <View
            android:layout_width="1dp"
            android:layout_height="24dp"
            android:layout_marginHorizontal="4dp"
            android:background="#D1D5DB" />

        <LinearLayout
            android:id="@+id/action_add_media"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:padding="8dp"
            android:background="?attr/selectableItemBackground"
            android:clickable="true"
            android:focusable="true">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/add_media"
                app:tint="#00796B"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="Add Media"
                android:textColor="#000000"
                android:textStyle="bold" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>