<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorRed">

    <!--
    FIXES:
    1. Removed the fixed 700dp Guideline and the extra <View>
    2. Set logo width to 70% of the screen (app:layout_constraintWidth_percent)
    3. Set logo height to "wrap_content" to maintain aspect ratio
    4. Created a vertical "packed" chain to group the logo and text together
    5. Centered this new group vertically in the parent
    -->

    <!-- Logo (Centered) -->
    <ImageView
        android:id="@+id/logo"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:contentDescription="@string/app_name"
        android:src="@drawable/ic_gr8_logo"
        app:layout_constraintBottom_toTopOf="@+id/gr8MathText"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.5"
        app:layout_constraintVertical_chainStyle="packed"
        app:layout_constraintWidth_percent="0.7"
        app:layout_constraintWidth_max="550dp" /> <!-- FIX: This stops the logo from growing too large -->

    <!-- Gr8 Math Text below the logo -->
    <TextView
        android:id="@+id/gr8MathText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Gr8 Math"
        android:textColor="@android:color/white"
        android:textSize="38sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/logo"
        tools:ignore="HardcodedText" />

</androidx.constraintlayout.widget.ConstraintLayout>