<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorLight">

    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        app:navigationIcon="@drawable/ic_arrow_back_24"
        app:title="Daily Lesson Log"
        app:titleCentered="true"
        app:titleTextAppearance="@style/TextAppearance.Gr8.ToolbarTitle"
        app:layout_constraintTop_toTopOf="parent" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintTop_toBottomOf="@id/toolbar"
        app:layout_constraintBottom_toBottomOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Procedure"
                android:fontFamily="@font/lexend"
                android:textStyle="bold"
                android:textColor="@color/colorText"
                android:textSize="14sp"
                android:layout_marginBottom="16dp"/>

            <LinearLayout
                android:id="@+id/procedureDaysContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
            </LinearLayout>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnAddDay"
                style="@style/Gr8ButtonStyle"
                android:layout_width="match_parent"
                android:layout_height="52dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="16dp"
                android:text="Add another day"
                app:backgroundTint="@color/colorMatisse"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnNext"
                style="@style/Gr8ButtonStyle"
                android:layout_width="match_parent"
                android:layout_height="52dp"
                android:layout_marginBottom="32dp"
                android:text="@string/next_button"
                app:backgroundTint="@color/colorDarkCyan"/>

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>