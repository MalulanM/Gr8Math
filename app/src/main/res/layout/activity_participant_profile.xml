<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorLight">

    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        app:navigationIcon="@drawable/ic_arrow_back_24"
        app:title="Profile"
        app:titleCentered="true"
        app:titleTextAppearance="@style/TextAppearance.Gr8.ToolbarTitle"
        app:layout_constraintTop_toTopOf="parent" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/toolbar"
        app:layout_constraintBottom_toBottomOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp">

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="@color/colorAccent"
                app:cardCornerRadius="16dp"
                app:cardElevation="0dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:padding="24dp">

                    <ImageView
                        android:id="@+id/ivProfile"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:src="@drawable/ic_profile_default"/>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginStart="16dp"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tvName"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Name"
                            android:fontFamily="@font/lexend"
                            android:textStyle="bold"
                            android:textSize="18sp"
                            android:textColor="@color/colorText"
                            android:layout_marginBottom="4dp"/>

                        <TextView
                            android:id="@+id/tvRole"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Role: Student"
                            android:fontFamily="@font/lexend"
                            android:textSize="12sp"
                            android:textColor="@color/colorText"/>

                        <TextView
                            android:id="@+id/tvLRN"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="LRN: -"
                            android:fontFamily="@font/lexend"
                            android:textSize="12sp"
                            android:textColor="@color/colorText"/>

                        <TextView
                            android:id="@+id/tvBirthdate"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Birthdate: -"
                            android:fontFamily="@font/lexend"
                            android:textSize="12sp"
                            android:textColor="@color/colorText"/>
                    </LinearLayout>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                app:cardBackgroundColor="@color/colorLight"
                app:strokeWidth="1dp"
                app:strokeColor="@color/sonicsilver"
                app:cardCornerRadius="16dp"
                app:cardElevation="0dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="24dp">

                    <TextView
                        android:id="@+id/tvDynamicHeader"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Badges"
                        android:fontFamily="@font/lexend"
                        android:textStyle="bold"
                        android:textSize="16sp"
                        android:textColor="@color/colorText"
                        android:layout_marginBottom="16dp"/>

                    <TextView
                        android:id="@+id/tvEmptyState"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="No items to display."
                        android:gravity="center"
                        android:fontFamily="@font/lexend"
                        android:textColor="@color/colorSubtleText"
                        android:visibility="gone"/>

                    <LinearLayout
                        android:id="@+id/llBadgesContainer"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:visibility="gone"
                        android:baselineAligned="false"
                        android:weightSum="3">

                        <LinearLayout
                            android:id="@+id/llBadgeSlot1"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:visibility="invisible">
                            <ImageView
                                android:id="@+id/ivBadge1"
                                android:layout_width="50dp"
                                android:layout_height="50dp" />
                            <TextView
                                android:id="@+id/tvBadgeName1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="4dp"
                                android:fontFamily="@font/lexend"
                                android:textSize="10sp"
                                android:textColor="@color/colorText"
                                android:gravity="center"/>
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/llBadgeSlot2"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:visibility="invisible">
                            <ImageView
                                android:id="@+id/ivBadge2"
                                android:layout_width="50dp"
                                android:layout_height="50dp" />
                            <TextView
                                android:id="@+id/tvBadgeName2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="4dp"
                                android:fontFamily="@font/lexend"
                                android:textSize="10sp"
                                android:textColor="@color/colorText"
                                android:gravity="center"/>
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/llBadgeSlot3"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:visibility="invisible">
                            <ImageView
                                android:id="@+id/ivBadge3"
                                android:layout_width="50dp"
                                android:layout_height="50dp" />
                            <TextView
                                android:id="@+id/tvBadgeName3"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="4dp"
                                android:fontFamily="@font/lexend"
                                android:textSize="10sp"
                                android:textColor="@color/colorText"
                                android:gravity="center"/>
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/llCertificatesContainer"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:visibility="gone"/>

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>