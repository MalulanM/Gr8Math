<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorLight">

    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbar"
        android:layout_width="0dp"
        android:layout_height="?attr/actionBarSize"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:navigationIcon="@drawable/ic_arrow_back_24"
        app:title="@string/participants_title"
        app:titleCentered="true"
        app:titleTextAppearance="@style/TextAppearance.Gr8.ToolbarTitle" />

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_navigation"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@color/white"
        app:itemIconTint="@color/bottom_nav_color_selector"
        app:itemTextColor="@color/bottom_nav_color_selector"
        app:labelVisibilityMode="labeled"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:menu="@menu/bottom_nav_menu_teacher" />

    <androidx.core.widget.NestedScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintBottom_toTopOf="@id/bottom_navigation"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/toolbar">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="16dp">

            <ImageView
                android:id="@+id/bannerBlue"
                android:layout_width="wrap_content"
                android:layout_height="120dp"
                android:layout_marginTop="-10dp"
                android:src="@drawable/blue_banner"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/bannerRed"
                android:layout_width="wrap_content"
                android:layout_height="120dp"
                android:layout_marginTop="-10dp"
                android:src="@drawable/red_banner"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <View
                android:id="@+id/anchorRank2"
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_marginTop="48dp"
                app:layout_constraintHorizontal_weight="1"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@id/anchorRank1"
                app:layout_constraintTop_toTopOf="parent" />

            <View
                android:id="@+id/anchorRank1"
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_marginTop="8dp"
                app:layout_constraintHorizontal_weight="1.1"
                app:layout_constraintStart_toEndOf="@id/anchorRank2"
                app:layout_constraintEnd_toStartOf="@id/anchorRank3"
                app:layout_constraintTop_toTopOf="parent" />

            <View
                android:id="@+id/anchorRank3"
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_marginTop="48dp"
                app:layout_constraintHorizontal_weight="1"
                app:layout_constraintStart_toEndOf="@id/anchorRank1"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/ivTrophy2"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:src="@drawable/silver_trophy"
                app:layout_constraintTop_toTopOf="@id/anchorRank2"
                app:layout_constraintStart_toStartOf="@id/anchorRank2"
                app:layout_constraintEnd_toEndOf="@id/anchorRank2"/>

            <ImageView
                android:id="@+id/ivTrophy1"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:src="@drawable/gold_trophy"
                app:layout_constraintTop_toTopOf="@id/anchorRank1"
                app:layout_constraintStart_toStartOf="@id/anchorRank1"
                app:layout_constraintEnd_toEndOf="@id/anchorRank1"/>

            <ImageView
                android:id="@+id/ivTrophy3"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:src="@drawable/bronze_trophy"
                app:layout_constraintTop_toTopOf="@id/anchorRank3"
                app:layout_constraintStart_toStartOf="@id/anchorRank3"
                app:layout_constraintEnd_toEndOf="@id/anchorRank3"/>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardRank2"
                android:layout_width="0dp"
                app:layout_constraintWidth_default="spread"
                android:layout_height="wrap_content"
                android:layout_marginTop="-10dp"
                android:layout_marginStart="6dp"
                android:layout_marginEnd="2dp"
                app:layout_constraintTop_toBottomOf="@id/ivTrophy2"
                app:layout_constraintStart_toStartOf="@id/anchorRank2"
                app:layout_constraintEnd_toEndOf="@id/anchorRank2"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?attr/selectableItemBackground"
                app:cardBackgroundColor="@color/colorAccent"
                app:cardCornerRadius="12dp"
                app:strokeWidth="1dp"
                app:strokeColor="@color/colorDarkCyan">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:minHeight="45dp"
                    android:padding="4dp">

                    <TextView
                        android:id="@+id/tvRank2Num"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/lexend"
                        android:text="2nd"
                        android:textColor="@color/colorDarkCyan"
                        android:textStyle="bold"
                        android:textSize="@dimen/podium_rank_text_size"
                        android:layout_marginEnd="2dp"/>

                    <TextView
                        android:id="@+id/tvRank2Name"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:fontFamily="@font/lexend"
                        android:text="Name"
                        android:textColor="@color/colorText"
                        android:textStyle="bold"
                        android:textSize="@dimen/podium_name_text_size"
                        android:maxLines="3"
                        android:ellipsize="end"/>

                    <ImageView
                        android:layout_width="12dp"
                        android:layout_height="12dp"
                        android:layout_marginStart="2dp"
                        android:src="@drawable/ic_arrow_proceed_green" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardRank1"
                android:layout_width="0dp"
                app:layout_constraintWidth_default="spread"
                android:layout_height="wrap_content"
                android:layout_marginTop="-14dp"
                android:layout_marginStart="2dp"
                android:layout_marginEnd="2dp"
                app:layout_constraintTop_toBottomOf="@id/ivTrophy1"
                app:layout_constraintStart_toStartOf="@id/anchorRank1"
                app:layout_constraintEnd_toEndOf="@id/anchorRank1"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?attr/selectableItemBackground"
                app:cardBackgroundColor="@color/colorAccent"
                app:cardCornerRadius="12dp"
                app:strokeWidth="1dp"
                app:strokeColor="@color/colorDarkCyan">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:minHeight="55dp"
                    android:padding="8dp">

                    <TextView
                        android:id="@+id/tvRank1Num"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/lexend"
                        android:text="1st"
                        android:textColor="@color/colorDarkCyan"
                        android:textStyle="bold"
                        android:textSize="@dimen/podium_1st_rank_text_size"
                        android:layout_marginEnd="4dp"/>

                    <TextView
                        android:id="@+id/tvRank1Name"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:fontFamily="@font/lexend"
                        android:text="Name"
                        android:textColor="@color/colorText"
                        android:textStyle="bold"
                        android:textSize="@dimen/podium_1st_name_text_size"
                        android:maxLines="3"
                        android:ellipsize="end"/>

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_marginStart="4dp"
                        android:src="@drawable/ic_arrow_proceed_green" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardRank3"
                android:layout_width="0dp"
                app:layout_constraintWidth_default="spread"
                android:layout_height="wrap_content"
                android:layout_marginTop="-10dp"
                android:layout_marginStart="2dp"
                android:layout_marginEnd="6dp"
                app:layout_constraintTop_toBottomOf="@id/ivTrophy3"
                app:layout_constraintStart_toStartOf="@id/anchorRank3"
                app:layout_constraintEnd_toEndOf="@id/anchorRank3"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?attr/selectableItemBackground"
                app:cardBackgroundColor="@color/colorAccent"
                app:cardCornerRadius="12dp"
                app:strokeWidth="1dp"
                app:strokeColor="@color/colorDarkCyan">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:minHeight="45dp"
                    android:padding="4dp">

                    <TextView
                        android:id="@+id/tvRank3Num"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/lexend"
                        android:text="3rd"
                        android:textColor="@color/colorDarkCyan"
                        android:textStyle="bold"
                        android:textSize="@dimen/podium_rank_text_size"
                        android:layout_marginEnd="2dp"/>

                    <TextView
                        android:id="@+id/tvRank3Name"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:fontFamily="@font/lexend"
                        android:text="Name"
                        android:textColor="@color/colorText"
                        android:textStyle="bold"
                        android:textSize="@dimen/podium_name_text_size"
                        android:maxLines="3"
                        android:ellipsize="end" />

                    <ImageView
                        android:layout_width="12dp"
                        android:layout_height="12dp"
                        android:layout_marginStart="2dp"
                        android:src="@drawable/ic_arrow_proceed_green" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvParticipants"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:clipToPadding="false"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:paddingBottom="80dp"
                android:nestedScrollingEnabled="false"
                app:layout_constraintTop_toBottomOf="@id/cardRank2"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                tools:itemCount="5"
                tools:listitem="@layout/item_participant_rank" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>